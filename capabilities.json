{
  "dataRoles": [
    {
      "displayName": "Data",
      "name": "data",
      "kind": "Grouping"
    },
    {
      "displayName": "Organization",
      "name": "organization",
      "kind": "Grouping",
      "description": "Column containing organization names (e.g., FAO, WHO, UNICEF). This is used to filter data based on password."
    }
  ],
  "dataViewMappings": [
    {
      "table": {
        "rows": {
          "for": {
            "in": "data"
          },
          "dataReductionAlgorithm": {
            "top": {}
          }
        },
        "columns": {
          "select": [
            {
              "bind": {
                "to": "organization"
              }
            }
          ]
        }
      }
    }
  ],
  "objects": {
    "general": {
      "displayName": "General Settings",
      "properties": {
        "title": {
          "displayName": "Title",
          "type": {
            "text": true
          },
          "description": "Title displayed above the login form"
        },
        "useModalMode": {
          "displayName": "Use Modal Mode",
          "type": {
            "bool": true
          },
          "description": "Show login in a popup dialog instead of inline (saves space)"
        }
      }
    },
    "security": {
      "displayName": "Security Settings",
      "properties": {
        "encryptedMappings": {
          "displayName": "Encrypted Mappings (JSON)",
          "type": {
            "text": true
          },
          "description": "Paste encrypted JSON from script: node tools/encrypt-passwords.js"
        },
        "adminPassword": {
          "displayName": "Admin Password",
          "type": {
            "text": true
          },
          "description": "Admin password to view all organizations without filtering"
        }
      }
    }
  },
  "supportsEmptyDataView": true,
  "supportsMultiVisualSelection": false,
  "supportsSynchronizingFilterState": true,
  "privileges": []
}

