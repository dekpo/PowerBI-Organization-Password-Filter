{
  "dataRoles": [
    {
      "displayName": "Data",
      "name": "data",
      "kind": "Grouping"
    },
    {
      "displayName": "Organization",
      "name": "organization",
      "kind": "Grouping"
    },
    {
      "displayName": "Password Valid (Optional)",
      "name": "passwordValid",
      "kind": "Grouping",
      "description": "Optional column to control button visibility. Add a 'PasswordValid' column to your data model with values '0' or '1'."
    }
  ],
  "dataViewMappings": [
    {
      "table": {
        "rows": {
          "for": {
            "in": "data"
          },
          "dataReductionAlgorithm": {
            "top": {}
          }
        },
        "columns": {
          "select": [
            {
              "bind": {
                "to": "organization"
              }
            }
          ]
        }
      }
    }
  ],
  "objects": {
    "general": {
      "displayName": "General",
      "properties": {
        "title": {
          "displayName": "Title",
          "type": {
            "text": true
          },
          "description": "Title/label displayed above the password input"
        }
      }
    },
    "passwordSettings": {
      "displayName": "Password Settings",
      "properties": {
        "password": {
          "displayName": "Password",
          "type": {
            "text": true
          }
        },
        "showPassword": {
          "displayName": "Show Password",
          "type": {
            "bool": true
          }
        },
        "savedPassword": {
          "displayName": "Saved Password",
          "type": {
            "text": true
          }
        }
      }
    },
    "filterSettings": {
      "displayName": "Filter Settings",
      "properties": {
        "organizationMapping": {
          "displayName": "Organization Password Mapping",
          "type": {
            "text": true
          },
          "description": "JSON mapping: {\"password1\":\"FAO\",\"password2\":\"UNICEF\"}"
        },
        "adminPassword": {
          "displayName": "Admin Password",
          "type": {
            "text": true
          },
          "description": "Admin password to view all data without organization filtering"
        }
      }
    }
  },
  "supportsEmptyDataView": true,
  "supportsMultiVisualSelection": false,
  "supportsSynchronizingFilterState": true,
  "privileges": []
}

